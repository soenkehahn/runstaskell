build-type: Simple

executable runstaskell
  main-is:
    Main.hs
  hs-source-dirs:
    src
  ghc-options:
    -Wall -threaded -fno-warn-name-shadowing
  build-depends:
      base == 4.*
    , containers
    , process
    , filepath
    , directory
    , base-compat
    , unix

test-suite spec
  type:
    exitcode-stdio-1.0
  hs-source-dirs:
    src, test
  ghc-options:
    -Wall -threaded -fno-warn-name-shadowing -O0
  main-is:
    Spec.hs
  build-depends:
      base == 4.*
    , containers
    , process
    , filepath
    , directory
    , base-compat
    , unix

    , hspec
    , silently
    , temporary
    , QuickCheck
