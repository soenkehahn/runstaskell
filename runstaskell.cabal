maintainer: soenke.hahn@zalora.com
build-type: Simple

executable staskell-bootstrap
  main-is:
    BootstrapMain.hs
  hs-source-dirs:
    src
  ghc-options:
    -Wall -threaded -fno-warn-name-shadowing
  build-depends:
      base == 4.*
    , directory
    , unix
    , process
    , containers
    , filepath

executable runstaskell
  main-is:
    RunstaskellMain.hs
  hs-source-dirs:
    src
  ghc-options:
    -Wall -threaded -fno-warn-name-shadowing
  build-depends:
      base == 4.*

test-suite spec
  type:
    exitcode-stdio-1.0
  hs-source-dirs:
    src, test
  ghc-options:
    -Wall -threaded -fno-warn-name-shadowing -O0
  main-is:
    Spec.hs
  build-depends:
      base == 4.*

    , hspec
    , silently
    , temporary
